{
    "manifest_version": 3,
    "name": "cms-tool",
    "version": "1.0.1",
    "description": "使用 Vue 3 開發的瀏覽器插件示例",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "vite.svg",
            "48": "vite.svg",
            "128": "vite.svg"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "tabs",
        "notifications"
    ],
    "optional_permissions": [
        "topSites"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "optional_host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "devtools_page": "register.html"
}